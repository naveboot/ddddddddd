# API Configuration
VITE_API_BASE_URL=http://127.0.0.1:8000/api
VITE_API_VERSION=v1

# Environment
VITE_NODE_ENV=development

# Application Configuration
VITE_APP_NAME=GDPilia
VITE_APP_VERSION=1.0.0

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_JWT_EXPIRES_IN=24h
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# Database (for backend reference)
DATABASE_URL=postgresql://username:password@localhost:5432/gdpilia
DATABASE_SSL=false

# Email Configuration (for backend reference)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@gdpilia.com

# File Storage (for backend reference)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=gdpilia-files

# Redis (for backend reference)
REDIS_URL=redis://localhost:6379

# External APIs (for backend reference)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Webhook URLs (for backend reference)
WEBHOOK_SECRET=your-webhook-secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_INTEGRATIONS=true
VITE_ENABLE_EMAIL_CAMPAIGNS=true
VITE_ENABLE_FILE_UPLOADS=true

# Debug
VITE_DEBUG_API=false
VITE_DEBUG_AUTH=false